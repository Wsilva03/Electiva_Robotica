    def simulate_robot(self):

        
        l1 = 7.5
        l2 = 8.5

        q1 = 0
        q2 = 0

        q = [q1, q2]

        L = []
        L.append(RevoluteDH(d=0, alpha=0, a=l1, offset=0))
        L.append(RevoluteDH(d=0, alpha=0, a=l2, offset=0))

        robot = DHRobot(L, name='Wall-e')
        fig = Figure(figsize=(8, 6))
        ax = fig.add_subplot(111, projection='3d')  # Create a 3D subplot
        p = RobotPlot(robot, q, ax, use_viewer=False) 
        ax.set_xlim([-l1 - l2, l1 + l2])
        ax.set_ylim([-l1 - l2, l1 + l2])
        ax.set_zlim([-0.5, l1 + l2])
        fig.save('robot_arm.png')
        pixmap = QtGui.QPixmap("robot_arm.png")
        self.Robot.setPixmap(pixmap)
        self.Robot.setScaledContents(True)




        print(robot)
        robot.teach(q, 'rpy/zyx', limits=[-17, 17, -17, 17, -17, 17])
        robot.savefig("grafica.png")
        pixmap = QtGui.QPixmap("grafica.png")
        self.Robot.setPixmap(pixmap)
        self.Robot.setScaledContents(True)
        MTH = robot.fkine(q)
        print(MTH)
        print(f'Roll, Pitch, Yaw = {tr2rpy(MTH.R, "deg", "zyx")}')
      
        pixmap = QtGui.QPixmap("grafica.png")
        self.Grafica.setPixmap(pixmap)
        self.Grafica.setScaledContents(True)
        plt.close()

        # Update the canvas and GUI (using Matplotlib methods)
        self.canvas.draw()
        self.figure.canvas.draw()  # Explicitly call canvas draw for immediate update
        self.Robot.update()

